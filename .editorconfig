# .editorconfig
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml,json,sh}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{Taskfile*, taskfile*}]
tab_width = 2
indent_style = tab
indent_size =4

[COMMIT_EDITMSG]
max_line_length = 0
